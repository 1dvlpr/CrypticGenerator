---
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta
      name="description"
      content="Just a regular ol- secure password generator."
    />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <slot />
  </body>
</html>
<style is:global>
  @import url('https://fonts.googleapis.com/css2?family=DM+Sans:wght@600&family=JetBrains+Mono:wght@600&display=swap');
  html {
    background-size: 40px 40px;
    background-image: linear-gradient(
        to right,
        rgba(49, 49, 49, 0.274) 1px,
        transparent 1px
      ),
      linear-gradient(to bottom, rgba(49, 49, 49, 0.274) 1px, transparent 1px);
    font-family: "DM Sans", system-ui, sans-serif;
    background-color: #0e0f0f;
  }
  code {
    font-family: Menlo, Monaco, Lucida Console, Liberation Mono,
      DejaVu Sans Mono, Bitstream Vera Sans Mono, Courier New, monospace;
  }
</style>
